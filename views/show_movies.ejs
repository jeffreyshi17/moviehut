<% include partials/header %>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">The Movie Hut</h1> </div>
        <div class="col-xs-10 col-md-10">
            <% Object.keys(movies).forEach(function(key){ %>
                <div class="col-lg-3 col-md-4 col-xs-6 thumb"> <a class="img-wrap thumbnail" href="/movies/<%= movies[key].id %>/edit"><img src='<%= movies[key].poster %>' height="200" width="150">
                                    <form action="/movies/<%= movies[key].id %>?_method=DELETE" method="POST">
    <button type = "submit" class="close">&times;</button>
                    </form>
                    </a>
                    <h3><a href="/movies/<%= movies[key].id %>"> <%= movies[key].title %></a></h3>
                    <h4>Now Playing:
                <% movies[key].showtimes.forEach(function(time){ %>
                <%= time %>  
                <% }) %>
                </h4> </div>
                <% }) %>
        </div>
    </div>
    <h2> Want to add a new movie to the The Movie Hut?</h2>
    <form action="/movies" method="POST">
        <input type="text" name="title" placeholder="Enter title to add...">
        <button>Search for Movie</button>
    </form>
